<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.navyabhaskar.test2_062916.details"
    android:id="@+id/functionality"
    android:background="#000000">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_blooddropImage"
        android:background="@drawable/editblooddrop1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="45dp"
         />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_caloriesImage"
        android:background="@drawable/edit_cal_2"
        android:contentDescription="Diet"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="200dp"
         />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_exerciseImage"
        android:contentDescription="Exercise"
        android:background="@drawable/exercise"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="45dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_medicationImage"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/medication" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageButton_myDataImage"
        android:background="@drawable/mydata"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_presRegimenImage"
        android:background="@drawable/regimen"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="45dp"  />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton_DiabetesInfoImage"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="200dp"
        android:background="@drawable/stats" />
</RelativeLayout>
