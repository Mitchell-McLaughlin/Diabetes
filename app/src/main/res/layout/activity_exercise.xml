<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.navyabhaskar.test2_062916.Exercise"
    android:background="#000000">


    <Spinner
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Indoor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Outdoor"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="135dp"
        />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Gym"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="195dp" />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Sports"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="255dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exercise:"
        android:id="@+id/textView_ExerExer"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/cursorColor"
        android:textSize="16dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories"
        android:id="@+id/textView_Calories"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/cursorColor"
        android:textSize="16dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dur"
        android:id="@+id/textView_Time"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/cursorColor"
        android:textSize="16dp"
        />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_indoorcal"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="65dp"
        />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_indoortime"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="65dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_outdoorcal"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="125dp"
        />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_outdoortime"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="125dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_gymcal"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="185dp"
        />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_gymtime"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="185dp" />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_sportscal"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="245dp"
        />

    <EditText
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_sportstime"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="245dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:id="@+id/textView_Date"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="330dp"
        android:textSize="18dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time :"
        android:id="@+id/textView_time"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="361dp"
        android:textSize="18dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_dateexec"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="320dp"
        android:textSize="16dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_timeexec"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="351dp"
        android:textSize="16dp"
        />

    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Save"
        android:id="@+id/button_saveexer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Home"
        android:id="@+id/button_homeexer"
        android:layout_alignTop="@+id/button_saveexer"
        android:layout_marginLeft="140dp"
        android:textSize="12dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Summary"
        android:id="@+id/button_summaryexer"
        android:layout_alignTop="@+id/button_saveexer"
        android:layout_marginLeft="270dp"
        android:textSize="12dp"
        android:textColor="#ffffff" />

</RelativeLayout>
