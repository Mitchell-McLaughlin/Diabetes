<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.navyabhaskar.test2_062916.daily_diet"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FoodItem :"
        android:id="@+id/textViewfoodItem"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="90dp"
        android:textSize="12dp"
        android:textColor="@color/cursorColor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories :"
        android:id="@+id/textViewCalodiet"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="250dp"
        android:textSize="12dp"
        android:textColor="@color/cursorColor"/>


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView_lundin"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/lunchdinner" />

    <Spinner
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerLunchDinner"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="70dp"
        android:textSize="10dp"/>

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLunDinCal"
        android:textSize="15dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="255dp"></EditText>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView_Breakfast"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/breakfast" />

    <Spinner
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerBreakfast"
        android:layout_marginTop="85dp"
        android:layout_marginLeft="70dp" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextBreakFastCal"
        android:textSize="15dp"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="255dp"
         />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView_Snacks"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/snacks" />

    <Spinner
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerSnacks"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="70dp" />



    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSnacksCal"
        android:textSize="15dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="255dp"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView_Alc"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/alchohol" />

    <Spinner
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerAlchohol"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="70dp" />


    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAlchoholCal"
        android:textSize="15dp"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="255dp"
        />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/imageView_NonAlc"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/nonalchohol" />

    <Spinner
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerNonAlchohol"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="70dp" />


    <EditText
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextNonAlchoholCal"
        android:textSize="15dp"
        android:layout_marginTop="225dp"
        android:layout_marginLeft="255dp"
        />

    <Spinner
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnertype"
        android:layout_marginTop="305dp"
        android:layout_marginLeft="45dp"
        android:textSize="10dp"/>

    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerquantity"
        android:layout_marginTop="305dp"
        android:layout_marginLeft="185dp"
        android:textSize="10dp"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:id="@+id/textView_dateopdiet"
        android:textSize="16dp"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="1dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />


    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:id="@+id/editText_datediet"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="135dp"
        android:textColor="#ffffff"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Time :"
        android:id="@+id/textView_timeopdiet"
        android:textSize="16dp"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="1dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff"
        />


    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:id="@+id/editText_timediet"
        android:layout_marginTop="385dp"
        android:layout_marginLeft="135dp"
        android:textSize="14dp"
        />


    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Save"
        android:id="@+id/button_savediet"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="10dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Home"
        android:id="@+id/button_homediet"
        android:layout_alignTop="@+id/button_savediet"
        android:layout_marginLeft="270dp"
        android:textSize="12dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Summary"
        android:id="@+id/button_summarydiet"
        android:layout_alignTop="@+id/button_savediet"
        android:layout_marginLeft="130dp"
        android:textSize="12dp"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/spinnerLunchDinner"
        android:layout_alignStart="@+id/spinnertype" />



</RelativeLayout>
