<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.navyabhaskar.test2_062916.personal_details"
    android:id="@+id/personalDetails"
    android:background="#080808">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tell us about Yourself !"
        android:id="@+id/textView_textviewpd"
        android:textColor="#ffffff"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="43dp"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name : "
        android:id="@+id/textView_firstnamepd"
        android:layout_marginTop="49dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="@android:color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:id="@+id/editText_firstNamepd"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:layout_marginTop="43dp"
        android:layout_marginLeft="123dp"
        android:background="#fbf9f9"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name :"
        android:id="@+id/textView_lastnamepd"
        android:layout_marginTop="89dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="#ffffff"
        android:textCursorDrawable="@color/colorAccent"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:id="@+id/editText_lastnamepd"
        android:layout_marginTop="83dp"
        android:layout_marginLeft="123dp"
        android:textColor="#020202"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age :"
        android:id="@+id/textView_agepd"
        android:layout_marginTop="129dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="#ffffff"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/editext_agepd"
        android:layout_marginTop="123dp"
        android:layout_marginLeft="123dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:maxLength="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"
        android:id="@+id/textView_emailpd"
        android:layout_marginTop="169dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="8"
        android:id="@+id/editText_emailpd"
        android:layout_marginTop="163dp"
        android:layout_marginLeft="123dp"
        android:textColor="#000000"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EmerCnctNo:"
        android:id="@+id/textView_econtactpd"
        android:layout_marginTop="209dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="#ffffff"
       />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="8"
        android:id="@+id/editText_econtactpd"
        android:layout_marginTop="203dp"
        android:layout_marginLeft="123dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:maxLength="12"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="height :"
        android:id="@+id/textView_heightpd"
        android:layout_marginTop="249dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/editText_feetpd"
        android:layout_marginTop="243dp"
        android:layout_marginLeft="123dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:maxLength="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ft"
        android:id="@+id/textViewfeetpd"
        android:layout_marginTop="249dp"
        android:layout_marginLeft="170dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="2"
        android:id="@+id/editText_inchespd"
        android:layout_marginTop="243dp"
        android:layout_marginLeft="200dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:maxLength="2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inc"
        android:id="@+id/textView_inchespd"
        android:layout_marginTop="249dp"
        android:layout_marginLeft="249dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight :"
        android:id="@+id/textView_weightpd"
        android:layout_marginTop="289dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="3"
        android:id="@+id/editText_weightpd"
        android:layout_marginTop="283dp"
        android:layout_marginLeft="123dp"
        android:textColor="#000000"
        android:background="#ffffff"
        android:maxLength="5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kgs"
        android:id="@+id/textView_kgspd"
        android:layout_marginTop="289dp"
        android:layout_marginLeft="190dp"
        android:textSize="@dimen/button_text_size"
        android:textColor="#ffffff" />



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/radiogroup_categpd"
        android:orientation="horizontal"
        android:background="#000000">
        <RadioButton
            android:layout_width="135dp"
            android:layout_height="30dp"
            android:text="Diabetic"
            android:id="@+id/radioButton_diabeticpd"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="0dp"
            android:textColor="#ffffff"
            android:visibility="visible"
            android:background="#484444" />
        <RadioButton
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Prediabetic"
            android:id="@+id/radioButton_prediabeteicpd"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:visibility="visible"
            android:textColor="#ffffff"
            android:background="#484444" />

    </RadioGroup>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter !"
        android:id="@+id/button_okpd"
        android:layout_marginTop="399dp"
        android:layout_marginLeft="129dp"
        android:background="#484444"
        android:textColor="#ffffff" />


</RelativeLayout>
