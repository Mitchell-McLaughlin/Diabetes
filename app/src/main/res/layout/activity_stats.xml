<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fitsSystemWindows="true"
tools:context="com.example.navyabhaskar.test2_062916.Stats"
    android:background="#000000">



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:id="@+id/button9"
        android:textColor="#ffffff"
        android:layout_marginTop="430dp"
        android:layout_marginLeft="140dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Plot"
        android:id="@+id/button7"
        android:textColor="#ffffff"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Table"
        android:id="@+id/button8"
        android:textColor="#ffffff"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="200dp"/>

    <RadioGroup
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <RadioButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Average"
        android:id="@+id/radioButtonavg"
        android:textColor="#ffffff"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="0dp"/>

    <RadioButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Max"
        android:id="@+id/radioButtonmin"
        android:textColor="#ffffff"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"/>

    <RadioButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Minimum"
        android:id="@+id/radioButtonmax"
        android:textColor="#ffffff"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"/>
    </RadioGroup>


    <Spinner
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="0dp"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time From"
        android:id="@+id/textViewTimeFrom"
        android:layout_gravity="center"
        android:textColor="@color/cursorColor"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="165dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time To"
        android:id="@+id/textViewTimeto"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="290dp"
        android:textColor="@color/cursorColor" />

    <Spinner
        android:layout_width="105dp"
        android:layout_height="48dp"
        android:id="@+id/spinner2"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="170dp"
        android:textSize="18dp"
         />

    <Spinner
        android:layout_width="104dp"
        android:layout_height="49dp"
        android:id="@+id/spinner3"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="285dp"
        android:textSize="18dp"
         />


</RelativeLayout>


