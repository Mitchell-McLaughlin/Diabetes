<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.navyabhaskar.test2_062916.Medication"
    android:background="#000000">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_Medicine"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dosage :"
        android:id="@+id/textView_Dosage"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="145dp"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_dosage"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="135dp"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:id="@+id/textView_datemed"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="205dp"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_Datemed"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="195dp"
        android:textSize="18dp"

        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time :"
        android:id="@+id/textView_timemed"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="265dp"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText2_timemed"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="255dp"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note :"
        android:id="@+id/textView_note"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="325dp"
        android:textSize="18dp"
        android:textColor="#ffffff" />


    <EditText
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText_Note"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="315dp"
        android:textSize="18dp"
        android:textColor="#ffffff" />


    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Save"
        android:id="@+id/button_saveexer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="14dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Home"
        android:id="@+id/button_homeexer"
        android:layout_alignTop="@+id/button_saveexer"
        android:layout_marginLeft="140dp"
        android:textSize="12dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="Summary"
        android:id="@+id/button_summaryexer"
        android:layout_alignTop="@+id/button_saveexer"
        android:layout_marginLeft="270dp"
        android:textSize="12dp"
        android:textColor="#ffffff" />



</RelativeLayout>
