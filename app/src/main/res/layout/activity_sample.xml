<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.navyabhaskar.test2_062916.sample"
    android:background="#000000"
    android:id="@+id/Rellayout_sample"
    android:theme="@style/AppTheme">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_blooddrop_bgl"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/blooddrop_bgl" />


    <TextView
        android:layout_width="135dp"
        android:layout_height="50dp"
        android:text="Blood Glucose :"
        android:id="@+id/textView_bglop"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="50dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="75dp"
        android:inputType="numberDecimal"
        android:id="@+id/editText_bglip"
        android:textSize="18dp"
        android:textStyle="bold|italic"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="175dp"
        android:textCursorDrawable="@null"
        android:cursorVisible="true"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="mg/dL"
        android:id="@+id/textView_dim"
        android:textSize="12dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="230dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:id="@+id/seekBar_bglprogress"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:max="700"
        android:progressDrawable="@drawable/custom_progress"
        android:thumb="@drawable/thumb" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Your Glucose level is Normal "
        android:id="@+id/textView_judge"
        android:textSize="14dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Date :"
        android:id="@+id/textView_dateop"
        android:textSize="18dp"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="1dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />


    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:id="@+id/editText_date"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="135dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Time :"
        android:id="@+id/textView_timeop"
        android:textSize="18dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="1dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />


    <EditText
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:id="@+id/editText_time"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="135dp"
        />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Note :"
        android:id="@+id/textView_noteop"
        android:textSize="18dp"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="1dp"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />


    <EditText
        android:layout_width="125dp"
        android:layout_height="70dp"
        android:inputType="text"
        android:id="@+id/editText_note"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="135dp"
        android:textSize="12dp"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Save"
        android:id="@+id/button_editRegimen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:background="#ffffff" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Home"
        android:id="@+id/button_homebgl"
        android:layout_alignStart="@+id/button_editRegimen"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="@drawable/blood_drop" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Summary"
        android:id="@+id/button_summarybgl"
        android:layout_alignStart="@+id/button_editRegimen"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="380dp"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="@drawable/diet" />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Home"
        android:id="@+id/button4"
        android:layout_alignStart="@+id/button_editRegimen"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="380dp"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="@drawable/exercise" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Summary"
        android:id="@+id/button5"
        android:layout_alignStart="@+id/button_editRegimen"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="380dp"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="@drawable/medication" />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Home"
        android:id="@+id/button6"
        android:layout_alignStart="@+id/button_editRegimen"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="380dp"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="@drawable/regimen" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="Summary"
        android:id="@+id/button7"
        android:layout_alignStart="@+id/button_editRegimen"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="380dp"
        android:textSize="12dp"
        android:textColor="#ffffff"
        android:background="@drawable/medication" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

